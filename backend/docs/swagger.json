        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
        "/start": {
            "post": {
                "description": "Responds with the slug to the newly started game.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "game"
                ],
                "summary": "Recives a word a start a game",
                "parameters": [
                    {
                        "description": "Secret Word",
                        "name": "word",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/api.RequestBody_CreateGame"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Game slug (identifier)",
                        "schema": {
                            "type": "Response_CreateGame"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "api.RequestBody_CreateGame": {
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "example": "secret"
                }
            }
        }
    }
}