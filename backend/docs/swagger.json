{
    "swagger": "2.0",
    "info": {
        "description": "An api to play the famous Hangman game of guessing words.",
        "title": "Hangman API",
        "contact": {
            "name": "Bruno Mollo",
            "url": "https://github.com/BrunoMollo"
        },
        "license": {
            "name": "MIT",
